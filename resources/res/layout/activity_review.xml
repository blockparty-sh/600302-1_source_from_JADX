<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/review_statusbar_background" android:background="@color/colorReviewETH" android:layout_width="match_parent" android:layout_height="24dp"/>
    <RelativeLayout android:id="@+id/review_toolbar" android:background="@color/colorReviewETH" android:layout_width="match_parent" android:layout_height="56dp" android:layout_below="@+id/review_statusbar_background">
        <ImageButton android:id="@+id/review_backbutton" android:background="@android:color/transparent" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/review_backward_arrow" android:layout_centerVertical="true" android:layout_marginStart="6dp"/>
        <TextView android:theme="@style/title_primary_m" android:id="@+id/review_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_review_toolbar_title" android:layout_centerVertical="true" android:layout_marginStart="22dp" android:layout_toEndOf="@+id/review_backbutton"/>
    </RelativeLayout>
    <ScrollView android:id="@+id/review_scrollView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_above="@+id/review_keyboard_layout" android:layout_below="@+id/review_toolbar">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/review_info_shadow_background" android:background="@drawable/review_info_shadow_background" android:paddingBottom="@dimen/review_shadow_paddingBottom" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/review_shadow_marginTop" android:layout_alignParentBottom="false" android:paddingStart="@dimen/review_shadow_paddingStart" android:paddingEnd="@dimen/review_shadow_paddingEnd" android:layout_marginStart="@dimen/review_shadow_marginStart" android:layout_marginEnd="@dimen/review_shadow_marginEnd" android:layout_alignParentStart="true" android:layout_alignParentEnd="true">
                <RelativeLayout android:id="@+id/review_info_content" android:padding="@dimen/margin_l" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentStart="true" android:layout_alignParentEnd="true">
                    <RelativeLayout android:id="@+id/review_info_title" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/review_info_coin_label_icon" android:background="@drawable/wallet_icon_indicator_eth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                        <TextView android:theme="@style/darklist_primary_s_bold" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/review_info_coin_title_simple_text" android:layout_width="171.25dp" android:layout_height="19.75dp" android:text="@string/text_review_coin_simple_title_eth" android:layout_alignParentTop="true" android:textAlignment="textStart" android:layout_marginStart="@dimen/margin_l" android:layout_toEndOf="@+id/review_info_coin_label_icon"/>
                        <TextView android:theme="@style/wallet_34" android:id="@+id/review_info_coin_title_detail_text" android:layout_width="171.25dp" android:layout_height="15.25dp" android:text="@string/text_review_coin_detail_title_eth" android:layout_below="@+id/review_info_coin_title_simple_text" android:layout_alignParentTop="false" android:textAlignment="viewStart" android:layout_marginStart="@dimen/margin_l" android:layout_toEndOf="@+id/review_info_coin_label_icon"/>
                        <Button android:id="@+id/review_info_edit_button" android:background="@drawable/review_info_edit_button_background" android:layout_width="@dimen/review_info_edit_width" android:layout_height="@dimen/review_info_edit_height" android:text="@string/text_review_edit_button" android:layout_centerVertical="true" android:textAllCaps="false" android:layout_alignParentEnd="true" style="@style/darklist_primary_xs"/>
                        <TextView android:theme="@style/darklist_primary_s_bold" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/review_info_addr_title_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="21dp" android:text="@string/text_signmsg_address_title" android:layout_alignParentTop="true" android:textAlignment="textStart" android:layout_marginStart="@dimen/margin_l" android:layout_toEndOf="@+id/review_info_coin_label_icon"/>
                        <TextView android:theme="@style/wallet_58" android:id="@+id/review_info_addr_content_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:lines="1" android:layout_below="@+id/review_info_addr_title_text" android:layout_alignBottom="@+id/review_info_coin_label_icon" android:layout_alignParentTop="false" android:textAlignment="viewStart" android:layout_marginStart="@dimen/margin_l" android:layout_toEndOf="@+id/review_info_coin_label_icon"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/review_info_transaction_content_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/review_info_title">
                        <TextView android:theme="@style/wallet_35" android:id="@+id/review_info_send_to" android:layout_width="181.5dp" android:layout_height="14.25dp" android:layout_marginTop="@dimen/review_info_send_to_marginTop" android:text="@string/text_review_send_to" android:textAlignment="viewStart" android:layout_alignParentStart="true"/>
                        <TextView android:theme="@style/wallet_36" android:id="@+id/review_receiver_address" android:layout_width="181.5dp" android:layout_height="32.25dp" android:layout_marginTop="@dimen/leading" android:text="0X98FFFA807ACF6E27C69223B296FB28064421e156" android:lines="2" android:layout_below="@+id/review_info_send_to" android:layout_alignParentStart="true"/>
                        <TextView android:theme="@style/wallet_35" android:id="@+id/review_info_fee_title" android:layout_width="108.25dp" android:layout_height="14.5dp" android:text="@string/text_review_fee" android:layout_alignTop="@+id/review_info_send_to" android:textAlignment="viewStart" android:layout_marginStart="@dimen/margin_m" android:layout_toEndOf="@+id/review_info_send_to"/>
                        <TextView android:theme="@style/wallet_37" android:id="@+id/review_info_fee_coin" android:layout_width="108.25dp" android:layout_height="16.75dp" android:text="0.0042 ETH fy" android:layout_alignTop="@+id/review_receiver_address" android:layout_alignStart="@+id/review_info_fee_title"/>
                        <TextView android:theme="@style/wallet_38" android:id="@+id/review_info_fee_conversion" android:layout_width="108.25dp" android:layout_height="15.5dp" android:text=" = USD 0.1619" android:layout_below="@+id/review_info_fee_coin" android:layout_alignLeft="@+id/review_info_fee_coin"/>
                        <TextView android:theme="@style/wallet_35" android:id="@+id/review_info_amount_title" android:layout_width="match_parent" android:layout_height="14.25dp" android:layout_marginTop="@dimen/review_info_amount_marginTop" android:text="@string/text_review_amount" android:layout_below="@+id/review_receiver_address" android:textAlignment="viewStart"/>
                        <TextView android:id="@+id/review_info_amount_coin" android:layout_width="wrap_content" android:layout_height="28.25dp" android:maxWidth="254.5dp" android:text="0000.00000000" android:includeFontPadding="false" android:layout_below="@+id/review_info_amount_title" style="@style/wallet_39"/>
                        <TextView android:textStyle="bold" android:gravity="bottom|left|center_vertical|center_horizontal|center|start" android:id="@+id/review_info_amount_coin_unit" android:layout_width="39dp" android:layout_height="17.5dp" android:layout_marginBottom="-3.75dp" android:text="@string/text_review_coin_simple_title_eth" android:layout_alignBottom="@+id/review_info_amount_coin" android:textAllCaps="false" android:layout_marginStart="@dimen/margin_xs" android:layout_toEndOf="@+id/review_info_amount_coin" style="@style/wallet_37"/>
                        <TextView android:theme="@style/wallet_38" android:id="@+id/review_info_amount_conversion" android:layout_width="wrap_content" android:layout_height="15dp" android:layout_marginTop="7.5dp" android:text=" = USD 6.21384569" android:layout_below="@+id/review_info_amount_coin"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/review_info_message_content_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/review_info_title">
                        <TextView android:theme="@style/darklist_primary_xs_bold" android:id="@+id/review_info_message_title" android:layout_width="match_parent" android:layout_height="18.75dp" android:layout_marginTop="@dimen/double_spacing" android:text="@string/text_signmsg_message_title" android:textAlignment="viewStart"/>
                        <TextView android:theme="@style/wallet_59" android:id="@+id/review_info_message_content" android:layout_width="match_parent" android:layout_height="120.75dp" android:layout_marginTop="@dimen/margin_xs" android:layout_below="@+id/review_info_message_title"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <TextView android:theme="@style/wallet_40" android:id="@+id/review_enter_title" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/review_enter_title_height" android:layout_marginTop="@dimen/review_enter_title_marginTop" android:text="@string/text_review_passcode_title" android:layout_below="@+id/review_info_shadow_background" android:layout_marginStart="@dimen/margin_l" android:layout_marginEnd="@dimen/margin_l" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
            <EditText android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/review_enter_text" android:background="@drawable/review_enter_pincode_background" android:layout_width="match_parent" android:layout_height="@dimen/review_enter_text_height" android:layout_marginTop="@dimen/margin_m" android:maxLength="18" android:layout_below="@+id/review_enter_title" android:textCursorDrawable="@drawable/review_text_cursor_drawable" android:textAlignment="textStart" android:paddingStart="@dimen/margin_l" android:paddingEnd="@dimen/margin_l" android:layout_marginStart="@dimen/margin_l" android:layout_marginEnd="@dimen/margin_l" style="@style/list_primary_m"/>
            <TextView android:id="@+id/review_invalid_message" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_xs" android:text="@string/passcode_incorrect" android:layout_below="@+id/review_enter_text" android:layout_marginStart="@dimen/margin_m" android:layout_alignStart="@+id/review_enter_text" android:layout_alignEnd="@+id/review_enter_text" style="@style/wallet_3"/>
            <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/review_lower_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/margin_l" android:layout_below="@+id/review_enter_text" android:layout_alignParentBottom="true">
                <RelativeLayout android:id="@+id/review_button_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_l">
                    <Button android:id="@+id/review_cancel_button" android:background="@drawable/review_button_background" android:layout_width="@dimen/review_button_width" android:layout_height="@dimen/review_button_height" android:text="@string/cancel" android:layout_marginStart="@dimen/margin_l" android:layout_alignParentStart="true" style="@style/darklist_primary_xs"/>
                    <Button android:id="@+id/review_send_button" android:background="@drawable/review_button_background" android:layout_width="@dimen/review_button_width" android:layout_height="@dimen/review_button_height" android:text="@string/text_review_send_button" android:layout_marginEnd="@dimen/margin_l" android:layout_alignParentEnd="true" style="@style/darklist_primary_xs"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/review_keyboard_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <FrameLayout android:id="@+id/review_frame_keyboard" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/num_key_background_height"/>
    </RelativeLayout>
</RelativeLayout>
