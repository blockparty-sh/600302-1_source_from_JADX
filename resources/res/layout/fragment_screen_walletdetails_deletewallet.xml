<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/deleteWalletHeaderContainer" android:background="@color/xxLightGray" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_gravity="center" android:id="@+id/deleteWalletName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="32dp" android:layout_marginRight="16dp" style="@style/WalletNameTitle"/>
        <TextView android:textColor="@color/warningRed" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="20dp" android:layout_marginRight="24dp" android:layout_marginBottom="24dp" android:text="@string/settings_delete_wallet_description" style="@style/AppText.Regular.16.DarkGray"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="24dp" android:layout_marginRight="24dp" android:text="@string/settings_delete_wallet_instruction" style="@style/AppText.Regular.16.MediumGray"/>
            <EditText android:textAppearance="@style/AppTextAppearance.EditText" android:id="@+id/deleteWalletNameEditText" android:paddingRight="32dp" android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginLeft="24dp" android:layout_marginTop="8dp" android:layout_marginRight="24dp" android:hint="@string/settings_delete_wallet_confirm" android:maxLines="1" android:lines="1" android:inputType="text" android:backgroundTint="@color/editTextUnderline"/>
            <Button android:enabled="false" android:textColor="@drawable/gradient_button_text_color_selector" android:id="@+id/deleteWalletButton" android:background="@drawable/button_round_destructive_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="24dp" android:layout_marginRight="24dp" android:text="@string/settings_delete_wallet"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
