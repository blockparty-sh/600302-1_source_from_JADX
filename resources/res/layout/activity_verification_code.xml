                    <TextView android:theme="@style/wallet_49" android:id="@+id/verification_code_number5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5" android:includeFontPadding="false" android:layout_marginStart="@dimen/margin_l" android:layout_toEndOf="@+id/verification_code_number4"/>
