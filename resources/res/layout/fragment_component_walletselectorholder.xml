<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp">
        <ImageView android:layout_gravity="center" android:id="@+id/walletColorImageView" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/background_wallet_color_dot"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/walletNameTextView" android:layout_width="wrap_content" android:layout_height="match_parent" android:maxLength="30" android:layout_marginStart="8dp" style="@style/AppTextAppearance.Title"/>
        <LinearLayout android:gravity="end" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/walletValueCoinAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" style="@style/AppTextAppearance.TitleSm"/>
            <TextView android:gravity="end" android:id="@+id/walletValueFiatAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/lightGray" android:layout_width="match_parent" android:layout_height="0.2dp" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
</LinearLayout>
