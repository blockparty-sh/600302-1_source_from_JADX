<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle" android:useLevel="false" android:innerRadius="0dp" android:thickness="5dp">
            <solid android:color="@color/xxLightGray"/>
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="1dp"/>
            <solid android:color="@color/xxLightGray"/>
            <padding android:left="24dp" android:right="16dp" android:bottom="1dp"/>
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="1dp"/>
            <solid android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>
</layer-list>
