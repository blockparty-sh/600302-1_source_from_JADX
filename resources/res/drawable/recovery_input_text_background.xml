<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="@color/colorRecoveryBoxFocused"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle" android:useLevel="false">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="@color/colorRecoveryBoxUnfocused"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>
